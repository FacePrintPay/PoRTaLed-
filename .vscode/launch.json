{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "cwd": "${workspaceFolder}",
      "env": {},
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Attach to Docker: Node",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app"
    },
    {
      "name": "Run npm start (terminal)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start"
    }
  ]
}
